{% extends 'home.html.twig' %}

{% block title %}My Order - La'Codai{% endblock %}

{% block body %}
<section class="h-100" style="background-color: #eee;">
  <div class="container h-100 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-10">

        <div class="d-flex justify-content-center align-items-center mb-4">
          <h2 class="mb-0 text-black fw-bold">Order Confirmation</h2>
        </div>

        {% for ord in order %}
        <a href="{{path('my_orderdetail',{'oid':ord.id})}}" class="nav-link">
          <div class="card rounded-3 mb-2 btn bg-white border-2 border-success">
            <div class="card-body p-4">
              <div class="row d-flex justify-content-between align-items-center">
                <div class="nav-link col-md-2 col-lg-2 col-xl-2">
                  <span class="text-success fw-bold h5">Order ID: {{ord.id}}</span>
                </div>
                <div class="col-md-3 col-lg-3 col-xl-3">
                  <span class="lead fw-bold mb-2 text-success h5">Order Date: {{ord.date|date("d/m/Y")}}</span>
                </div>
                <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1 mt-1">
                  <span class="mb-0 fw-bold text-success h5">Total: {{ord.total}} Ä‘</span>
                </div>
              </div>
            </div>
          </div>
        </a>
        {% endfor %}

      </div>
    </div>
  </div>
</section>
{% endblock %}
