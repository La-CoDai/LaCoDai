{% extends 'home.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <section>
      <div class="container mt-3 mb-5">
        <div class="row mb-3">
          <div class="col-6 col-sm-7 col-md-6 m-auto">
            <div class="card border-0 shadow">
              <div class="card-body">
                <div class="text-center h1" style="width: 100%;"><i class="fa-solid fa-user"></i></div>
                  <input type="email" value="{{ last_username }}" name="email" class="form-control my-4 py-2" autocomplete="email" placeholder="Email..." required>
                  <input type="password" name="password" id="inputPassword" class="form-control my-4 py-2" autocomplete="current-password" placeholder="Password..." required>
                  <div class="text-center mt-3">
                    <button class="btn mb-2 text-white" style="background-color: #0f172a;" type="submit">Login</button>
                    <a href="{{path('registerForm')}}" class="nav-link">Not a member yet ?</a>
                  </div>
              </div>
            </div>
          </div>
        </div>
        <div class="d-flex text-align-end justify-content-center mb-5"><img class="col-12 col-sm-7 col-md-6" src="{{asset('images/poster.jpg')}}" alt=""></img></div>
      </div>
    </section>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
</form>
{% endblock %}
