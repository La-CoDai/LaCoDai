{% extends 'home.html.twig' %}

{% block title %}Register - La'Codai{% endblock %}

{% block body %}
{% if error %}
  <div class="alert alert-danger">{{ error }}</div>
{% endif %}
<section>
      <div class="container mt-3 mb-5">
        <div class="row mb-3">
          <div class="col-6 col-sm-7 col-md-6 m-auto">
            <div class="card border-0 shadow">
              <div class="card-body">
                <div class="text-center h1" style="width: 100%;"><i class="fa-regular fa-registered"></i></div>
                  {{ form_start(form) }}
                    <div class="my-3">
                      <label for="" class="mb-1">Email:</label>
                      {{ form_widget(form.email) }}
                    </div>
                    <div class="my-3">
                      <label for="" class="mb-1">Name:</label>
                      {{ form_widget(form.name) }}
                    </div>
                    {{ form_widget(form.password) }}
                    <div class="my-3">
                      <label for="" class="mb-1">Address:</label>
                      {{ form_widget(form.address) }}
                    </div>
                    <div class="my-3">
                      <label for="" class="mb-1">Phone number:</label>
                      {{ form_widget(form.phone) }}
                    </div>
                    <div class="text-center mt-3">
                        {{ form_widget(form.add) }}
                        <a href="{{path('loginForm')}}" class="nav-link">Back to Login</a>
                    </div>
                  {{ form_end(form) }}
              </div>
            </div>
          </div>
        </div>
        <div class="d-flex text-align-end justify-content-center mb-5"><img class="col-12 col-sm-7 col-md-6" src="{{asset('images/poster_1.png')}}" alt=""></img></div>
      </div>
</section>
{% endblock %}
